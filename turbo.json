{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    "**/.env"
  ],
  "tasks": {
    "dev": {
      "dependsOn": [
        "^generate-embed",
        "^db:generate"
      ],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build",
        "^db:generate"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "API_HOST",
        "API_PORT",
        "DATABASE_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL"
      ]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "generate-embed": {
      "cache": false
    },
    "lint": {},
    "test": {},
    "test:e2e": {},
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
